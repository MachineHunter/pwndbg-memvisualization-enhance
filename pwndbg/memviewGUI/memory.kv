#:kivy 2.0.0
#: import hex kivy.utils.get_color_from_hex

MemoryRoot:

<MemoryRoot>:
    canvas.before:
        Color:
            rgba: hex('#ffffff')
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: hex('#000000')
        Line:
            points: [root.size[0]*0.7, 0, root.size[0]*0.7, root.size[1], root.size[0]*0.7, 0]
            width: 1
    StartMemory:
        id: start_memory
    
<StartMemory>:
    orientation: 'horizontal'
    size: root.size
    ScrollView:
        id: scroll_view
        size_hint_x: 0.7
        scroll_type: ['bars']
        bar_width: 16
        FloatLayout:
            id: base_area
            size_hint_y: root.scroll_height / root.height

    FloatLayout:
        size_hint_x: 0.3
        canvas.before:
            Color:
                rgba: hex('#fffacd')
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: stop
            text: 'stop'
            #bold: True
            size_hint: (0.3, 0.1)
            font_size: 30
            pos_hint: {'x': 0.1, 'top': 0.95}
            on_press: print(root.ids)
            
        Button:
            id: continue
            text: 'play'
            size_hint: (0.3, 0.1)
            font_size: 30
            pos_hint: {'x': 0.45, 'top': 0.95}
            on_press: print(app.root.pos)

        Button:
            id: snap
            text: 'Snapshot'
            size_hint: (0.8, 0.1)
            font_size: 30
            pos_hint: {'x': 0.1, 'top': 0.80}
            on_press: print(app.root.pos)
        
        Button:
            id: view_snap
            text: 'View Snapshot'
            size_hint: (0.8, 0.1)
            font_size: 30
            pos_hint: {'x': 0.1, 'top': 0.65}
            on_press: print(app.root.pos)
        
        Button:
            id: view_snap
            text: 'Update'
            size_hint: (0.8, 0.1)
            font_size: 30
            pos_hint: {'x': 0.1, 'top': 0.2}
            on_press: app.root.update()

<SnapMemory>:
    orientation: 'horizontal'
    size: root.size
    ScrollView:
        id: scroll_view
        size_hint_x: 0.7
        scroll_type: ['bars']
        bar_width: 16
        FloatLayout:
            id: base_area
            size_hint_y: root.scroll_height / root.height

    FloatLayout:
        size_hint_x: 0.3
        canvas.before:
            Color:
                rgba: hex('#fffacd')
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: stop
            text: 'Back'
            bold: True
            size_hint: (0.2, 0.1)
            font_size: 50
            pos_hint: {'x': 0.1, 'top': 0.95}
            on_press: print(app.root.ids['start_memory'].ids)


<NoneArea>:
    FloatLayout:
        id: none_area
        size: root.size
        Label:
            size_hint: (0.5, root.memory_height)
            pos_hint: {'x': root.pos_x, 'top': root.top}
            canvas.before:
                Color:
                    rgba: hex('#dcdcdc')
                Rectangle:
                    pos: self.pos
                    size: self.size

<SectionArea>:
    FloatLayout:
        size: root.size
        Label:
            text: root.text
            font_size: root.font_size
            color: root.text_color
            size_hint: (root.x, root.y)
            pos_hint: {'x': root.pos_x, 'top': root.top}
            canvas.before:
                Color:
                    rgba: hex(root.color)
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: root.start_address
            font_size: root.label_font_size
            color: root.label_color
            size_hint: (root.label_size[0], root.label_size[1])
            pos_hint: {'x': root.label_x, 'top': root.top}
        Label:
            text: root.end_address
            font_size: root.label_font_size
            color: root.label_color
            size_hint: (root.label_size[0], root.label_size[1])
            pos_hint: {'x': root.label_x, 'top': root.top-root.y+root.label_size[1]}

<RegisterArea>:
    FloatLayout:
        size: root.size
        canvas.before:
            Color:
                rgba: hex('#000000')
            Line:
                points: [root.size[0]*0.07, root.size[1]*root.y, root.size[0]*0.6, root.size[1]*root.y, root.size[0]*0.63, root.size[1]*root.y]
                width: 1
        Label:
            text: root.text
            font_size: "18"
            color: '#000000'
            size_hint: (0.05, root.label_size)
            pos_hint: {'x':0.02, 'top': root.y + root.label_size/2}

<StackFrame>:
    FloatLayout:
        size: root.size
        canvas.before:
            Color:
                rgba: hex('#ffffff')
            Line:
                points: [root.size[0]*0.11, root.size[1]*root.y1, root.size[0]*0.11, root.size[1]*root.y2, root.size[0]*0.59, root.size[1]*root.y2]
                width: 1
            
            Color:
                rgba: hex('#ffffff')
            Line:
                points: [root.size[0]*0.11, root.size[1]*root.y1, root.size[0]*0.59, root.size[1]*root.y1, root.size[0]*0.59, root.size[1]*root.y2]
                width: 1
        Label:
            text: root.text
            font_size: "18"
            color: '#ffffff'
            size_hint: (0.1, root.label_size)
            pos_hint: {'x':0.12, 'top': (root.y1 + root.y2) / 2 + root.label_size/2}


<Mark>:
    FloatLayout:
        size: root.size
        canvas.before:
            Color:
                rgba: hex('#000000')
            Line:
                points: [root.size[0]*0.07, root.size[1]*root.y, root.size[0]*0.6, root.size[1]*root.y, root.size[0]*0.63, root.size[1]*root.y]
                width: 1
        Label:
            text: root.text
            font_size: "18"
            color: '#000000'
            size_hint: (0.05, root.label_size)
            pos_hint: {'x':0.01, 'top': root.y + root.label_size/2}